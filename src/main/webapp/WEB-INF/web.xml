<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>BookManager</display-name>

	<context-param>
		<param-name>dbURL</param-name>
		<param-value>jdbc:mysql://localhost/bookmanager</param-value>
	</context-param>
	<context-param>
		<param-name>dbuserid</param-name>
		<param-value>root</param-value>
	</context-param>

	<context-param>
		<param-name>dbuserpwd</param-name>
		<param-value>admin</param-value>
	</context-param>

	<context-param>
		<param-name>dbinitcat</param-name>
		<param-value>bookmanager</param-value>
	</context-param>

	<context-param>
		<param-name>copyright</param-name>
		<param-value>2021 by TrinhXu</param-value>
	</context-param>
	<context-param>
		<param-name>weblink</param-name>
		<param-value>/index.jsp/</param-value>
	</context-param>

	<error-page>
		<error-code>404</error-code>
		<location>/errorHandler.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/errorHandler.jsp</location>
	</error-page>

	<context-param>
		<param-name>hostURL</param-name>
		<param-value>http://localhost:8080</param-value>
	</context-param>
	<context-param>
        <param-name>uploadPath</param-name>
        <param-value>C:/Users/Admin/thuytrinh/javaExamImg/</param-value>
    </context-param>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>